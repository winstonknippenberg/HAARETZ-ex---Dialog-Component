{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true
    }
}